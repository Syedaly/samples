resource "aws_iam_role" "glue_data_catalog_role" {
  name = "GlueDataCatalogRole"
  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "sts:AssumeRole",
      "Principal": {
        "Service": "glue.amazonaws.com"
      },
      "Effect": "Allow",
      "Sid": ""
    }
  ]
}
EOF
}

resource "aws_iam_role_policy_attachment" "glue_data_catalog_role_policy_attachment" {
  role       = aws_iam_role.glue_data_catalog_role.name
  policy_arn = aws_iam_policy.glue_data_catalog_policy.arn
}

resource "aws_iam_policy" "glue_data_catalog_policy" {
  name        = "GlueDataCatalogPolicy"
  policy      = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::your-bucket-name/*"
      ]
    },
    {
      "Action": [
        "glue:CreateTable",
        "glue:UpdateTable",
        "glue:GetTable",
        "glue:DeleteTable"
      ],
      "Effect": "Allow",
      "Resource": "*"
    }
  ]
}
EOF
}

