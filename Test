# Create Glue Database
resource "aws_glue_catalog_database" "example_db" {
  name = "example_database"
}

# Create Glue Crawler
resource "aws_glue_crawler" "example_crawler" {
  name          = "example_crawler"
  role          = aws_iam_role.glue_crawler_role.arn # Replace with your IAM role
  database_name = aws_glue_catalog_database.example_db.name

  targets {
    s3_targets {
      path = "s3://my-sample-bucket/path-to-parquet-files/"
    }
  }

  configuration = jsonencode({
    "Version": 1.0,
    "CrawlerOutput": {
      "Partitions": {
        "AddPartitions": true
      }
    }
  })
}

# IAM Role for Glue Crawler
resource "aws_iam_role" "glue_crawler_role" {
  name = "glue-crawler-role"
  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [{
      Effect = "Allow"
      Principal = {
        Service = "glue.amazonaws.com"
      }
      Action = "sts:AssumeRole"
    }]
  })
}

# Attach IAM Policy to the Role
resource "aws_iam_policy_attachment" "glue_policy_attachment" {
  name       = "glue-policy-attachment"
  roles      = [aws_iam_role.glue_crawler_role.name]
  policy_arn = "arn:aws:iam::aws:policy/service-role/AWSGlueServiceRole"
}
